<h1> Criar conta</h1>

<%= form_with model: @user, url: users_path do |f| %>

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <%= @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit "Criar" %>
    <%= link_to "Login", login_path %>
  </div>

<% end %>